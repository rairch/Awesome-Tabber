  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon-arrows-disabled-128.png",
      "38": "images/icon-arrows-disabled-128.png"
    },
    "default_title": "awesome-tabber",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "permissions": [ "tabs", "idle" ]
}
